# Usage:
# make all -f 3-Makefile
# make clean -f 3-Makefile
# make fclean -f 3-Makefile
# make oclean -f 3-Makefile
# make re -f 3-Makefile

CC = gcc
SRC = main.c school.c
OBJ = ${SRC:.c=.o}
NAME = school
RM = rm -f

all: ${OBJ}
	${CC} ${OBJ} -o ${NAME}
clean:
	${RM} *~ ${NAME}
oclean:
	${RM} *.o ${OBJ}
fclean:
	${RM} *~ ${NAME}
	${RM} *.o ${OBJ}
re: ${OBJ}
	${CC} ${OBJ} -o ${NAME}
